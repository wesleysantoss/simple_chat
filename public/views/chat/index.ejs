<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Simple Chat</title>
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body class="bg-gradient-purple">
    <div class="container bg-purple-light-v2 box-shadow">
        <div class="row" id="conteudo">
            <div class="col-md-3 bg-purple-light-v3 p-0">
                <div class="font-1-2 p-2">
                    <p class="m-0 text-center font-1-3 color-white-light">Amigos</p>
                </div>
                
                <div style="overflow: auto; max-height: 100%;">
                    <ul id="list-users"></ul>
                </div>
                
                <div class="col-md-12 div-bottom">
                    <a href="/chat/logout" id="btn-logout" class="btn btn-danger float-right">Sair</a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="row" id="container-chat" style="overflow: auto">

                </div>
                <div class="row">
                    <div class="col-md-12 div-bottom">
                        <textarea class="text-area-v1" id="message"></textarea>
                        <button class="btn btn-success btn-block" id="btn-send-message">Enviar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/utils.js"></script>
    <script src="js/chat/chat.js"></script>
</body>
</html>
